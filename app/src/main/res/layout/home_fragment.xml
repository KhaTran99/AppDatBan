                    android:background="@drawable/vienduoi"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_15sdp">


                    <Button
                        android:id="@+id/btnDealHot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/vien_button"
                        android:drawableTop="@drawable/hot_deal"
                        android:lines="2"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/deal_hot"
                        android:textAllCaps="false"
                        android:textColor="@color/Text_Color"
                        android:textSize="@dimen/_6sdp" />

                    <Button
                        android:id="@+id/btnUuDaiThanhVien"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/vien_button"
                        android:drawableTop="@drawable/member_card"
                        android:lines="2"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/uu_dai_thanh_vien"
                        android:textAllCaps="false"
                        android:textColor="@color/Text_Color"
                        android:textSize="@dimen/_6sdp" />


                    <Button
